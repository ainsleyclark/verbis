{{ define "content" }}

    <!-- =====================
        New Password
        ===================== -->
    <p>Hi {{ .UserName }},</p>
    <p>You are receiving this email because you have been added to the {{ .AppTitle }} website. Your login details are below:</p>
    <h2 style="margin-bottom: 10px;">Login Details:</h2>
    <p style="margin-bottom: 6px;"><strong>Email:</strong> {{ .Email }} </p>
    <p style="margin-bottom: 1rem;"><strong>Password:</strong> {{ .Password }} </p>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
        <tbody>
            <tr>
                <td align="left">
                    <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                        <tr>
                            <td>
                                <a href="{{ .AppUrl }}/admin" target='_blank'>Login</a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

{{ end }}